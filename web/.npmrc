# 使用精确的依赖版本（避免版本漂移）
save-exact=false

# 安装时避免不必要的警告
loglevel=warn

# 跳过可选依赖（减少安装时间）
optional=false

# 强制使用 package-lock.json
package-lock=true

# 安装时不生成 package-lock.json（如果不需要）
# lock=false

# 使用.npmrc 配置覆盖（项目优先）
engine-strict=true

# 减少网络超时时间
fetch-timeout=60000
fetch-retries=2

# 使用国内镜像（可选）
# registry=https://registry.npmmirror.com
